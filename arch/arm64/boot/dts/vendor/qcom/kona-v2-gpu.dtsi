&soc {
	msm_bus: qcom,kgsl-busmon {
		label = "kgsl-busmon";
		compatible = "qcom,kgsl-busmon";
		operating-points-v2 = <&gpu_opp_table_v2>;
	};

	gpu_opp_table_v2: gpu-opp-table_v2 {
		compatible = "operating-points-v2";
		
		opp-840000000 {
			opp-hz = /bits/ 64 <840000000>;
			opp-microvolt = <257>;
		};

		opp-670000000 {
			opp-hz = /bits/ 64 <670000000>;
			opp-microvolt = <193>;
		};

		opp-587000000 {
			opp-hz = /bits/ 64 <587000000>;
			opp-microvolt = <65>;
		};

		opp-388000000 {
			opp-hz = /bits/ 64 <388000000>;
			opp-microvolt = <16>;
		};

		opp-357000000 {
			opp-hz = /bits/ 64 <357000000>;
			opp-microvolt = <1>;
		};
		
		opp-205000000 {
			opp-hz = /bits/ 64 <305000000>;
			opp-microvolt = <1>;
		};
	};
};

&msm_gpu {
	qcom,chipid = <0x06050001>;

	/* GPU OPP data */
	operating-points-v2 = <&gpu_opp_table_v2>;

	/delete-property/qcom,initial-pwrlevel;
	/delete-node/qcom,gpu-pwrlevels;

	/* Power levels bins */
	qcom,gpu-pwrlevel-bins {
		compatible="qcom,gpu-pwrlevel-bins";
		#address-cells = <1>;
		#size-cells = <0>;
		
		qcom,gpu-pwrlevels-0 {
			#address-cells = <1>;
			#size-cells = <0>;
			qcom,speed-bin = <0>;
			qcom,initial-pwrlevel = <5>;
			qcom,throttle-pwrlevel = <0>;
			
			qcom,gpu-pwrlevel@0 {
				reg = <0>;
				qcom,gpu-freq = <840000000>;
				qcom,bus-freq-ddr7 = <11>;
				qcom,bus-min-ddr7 = <1>;
				qcom,bus-max-ddr7 = <12>;

				qcom,bus-freq-ddr8 = <11>;
				qcom,bus-min-ddr8 = <1>;
				qcom,bus-max-ddr8 = <12>;

				qcom,acd-level = <0x802b5ffd>;
			};
			
			qcom,gpu-pwrlevel@1 {
				reg = <1>;
				qcom,gpu-freq = <670000000>;
				qcom,bus-freq-ddr7 = <10>;
				qcom,bus-min-ddr7 = <1>;
				qcom,bus-max-ddr7 = <11>;

				qcom,bus-freq-ddr8 = <9>;
				qcom,bus-min-ddr8 = <1>;
				qcom,bus-max-ddr8 = <11>;

				qcom,acd-level = <0x802b5ffd>;
			};

			qcom,gpu-pwrlevel@2 {
				reg = <2>;
				qcom,gpu-freq = <587000000>;
				qcom,bus-freq-ddr7 = <8>;
				qcom,bus-min-ddr7 = <1>;
				qcom,bus-max-ddr7 = <11>;

				qcom,bus-freq-ddr8 = <7>;
				qcom,bus-min-ddr8 = <1>;
				qcom,bus-max-ddr8 = <10>;

				qcom,acd-level = <0x802b5ffd>;
			};

			qcom,gpu-pwrlevel@3 {
				reg = <3>;
				qcom,gpu-freq = <388000000>;
				qcom,bus-freq-ddr7 = <4>;
				qcom,bus-min-ddr7 = <1>;
				qcom,bus-max-ddr7 = <5>;

				qcom,bus-freq-ddr8 = <4>;
				qcom,bus-min-ddr8 = <1>;
				qcom,bus-max-ddr8 = <5>;

				qcom,acd-level = <0x802b5ffd>;
			};

			qcom,gpu-pwrlevel@4 {
				reg = <4>;
				qcom,gpu-freq = <357000000>;
				qcom,bus-freq-ddr7 = <3>;
				qcom,bus-min-ddr7 = <1>;
				qcom,bus-max-ddr7 = <5>;

				qcom,bus-freq-ddr8 = <2>;
				qcom,bus-min-ddr8 = <1>;
				qcom,bus-max-ddr8 = <5>;

				qcom,acd-level = <0x802b5ffd>;
			};
			
                        qcom,gpu-pwrlevel@5 {
				reg = <5>;
				qcom,gpu-freq = <305000000>;
				qcom,bus-freq-ddr7 = <2>;
				qcom,bus-min-ddr7 = <1>;
				qcom,bus-max-ddr7 = <5>;

				qcom,bus-freq-ddr8 = <2>;
				qcom,bus-min-ddr8 = <1>;
				qcom,bus-max-ddr8 = <5>;

				qcom,acd-level = <0x802b5ffd>;
			};
			
			qcom,gpu-pwrlevel@6 {
				reg = <6>;
				qcom,gpu-freq = <0>;
				qcom,bus-freq = <0>;
				qcom,bus-min = <0>;
				qcom,bus-max = <0>;
			};
		};
	};
};
